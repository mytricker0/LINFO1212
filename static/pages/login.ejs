<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page</title>
    <link rel="icon" type="image/x-icon" href="/main/images/Blason_ville_OLL.png">
    <!-- Latest compiled and minified CSS -->

    <link rel="stylesheet" href="/static/styles/login.css">
    <link rel="stylesheet" href="/static/styles/index.css">
    
    
</head>
<body>
    <%- include('navbar.ejs') %> <!-- This is where the navbar will be fetched -->
   
    <% if (typeof message !== 'undefined') { %>
        <script>alert('<%- message %>');</script>
    <% } %>

    <form method="post" class="login" action="/login">
        <input type="text" id="username" name="username" required placeholder="Username" class="log"><br><br>
    
        <input type="password" id="password" name="password" required placeholder="Password" class="log"><br><br>
    
        <input type="submit" value="Login" class="log_button">

        <div class="signup">
            <label for="account">Don't have an account? <a href="/signup">Sign up</a></label>
        </div>
    </form>
</body>
</html>
